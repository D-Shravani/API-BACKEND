{
  "info": {
    "name": "API Backend - Testing Collection",
    "description": "Complete API collection for testing the RESTful backend API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://127.0.0.1:5000",
      "type": "string"
    },
    {
      "key": "admin_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "user_token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/health",
          "host": ["{{base_url}}"],
          "path": ["health"]
        },
        "description": "Check if API is running"
      }
    },
    {
      "name": "Login - Admin",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 200) {",
              "    const response = pm.response.json();",
              "    pm.collectionVariables.set('admin_token', response.data.token);",
              "    pm.environment.set('admin_token', response.data.token);",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"admin@example.com\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/login",
          "host": ["{{base_url}}"],
          "path": ["login"]
        },
        "description": "Login as admin user and get JWT token"
      }
    },
    {
      "name": "Login - Regular User",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 200) {",
              "    const response = pm.response.json();",
              "    pm.collectionVariables.set('user_token', response.data.token);",
              "    pm.environment.set('user_token', response.data.token);",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"john@example.com\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/login",
          "host": ["{{base_url}}"],
          "path": ["login"]
        },
        "description": "Login as regular user and get JWT token"
      }
    },
    {
      "name": "Get All Users",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/users",
          "host": ["{{base_url}}"],
          "path": ["users"]
        },
        "description": "Retrieve all users (no auth required)"
      }
    },
    {
      "name": "Get Users - Filter by Role",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/users?role=admin",
          "host": ["{{base_url}}"],
          "path": ["users"],
          "query": [
            {
              "key": "role",
              "value": "admin"
            }
          ]
        },
        "description": "Get users filtered by role"
      }
    },
    {
      "name": "Get User by ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/users/1",
          "host": ["{{base_url}}"],
          "path": ["users", "1"]
        },
        "description": "Get a specific user by ID"
      }
    },
    {
      "name": "Create User - Valid",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{admin_token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Jane Smith\",\n  \"email\": \"jane@example.com\",\n  \"age\": 28,\n  \"role\": \"user\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/users",
          "host": ["{{base_url}}"],
          "path": ["users"]
        },
        "description": "Create a new user with valid data"
      }
    },
    {
      "name": "Create User - Missing Field",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{admin_token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Jane Smith\",\n  \"age\": 28\n}"
        },
        "url": {
          "raw": "{{base_url}}/users",
          "host": ["{{base_url}}"],
          "path": ["users"]
        },
        "description": "Test validation - missing email field"
      }
    },
    {
      "name": "Create User - Invalid Email",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{admin_token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Jane Smith\",\n  \"email\": \"not-an-email\",\n  \"age\": 28\n}"
        },
        "url": {
          "raw": "{{base_url}}/users",
          "host": ["{{base_url}}"],
          "path": ["users"]
        },
        "description": "Test validation - invalid email format"
      }
    },
    {
      "name": "Create User - Duplicate Email",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{admin_token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Another Admin\",\n  \"email\": \"admin@example.com\",\n  \"age\": 30\n}"
        },
        "url": {
          "raw": "{{base_url}}/users",
          "host": ["{{base_url}}"],
          "path": ["users"]
        },
        "description": "Test validation - duplicate email"
      }
    },
    {
      "name": "Create User - Under Age",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{admin_token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Young User\",\n  \"email\": \"young@example.com\",\n  \"age\": 17\n}"
        },
        "url": {
          "raw": "{{base_url}}/users",
          "host": ["{{base_url}}"],
          "path": ["users"]
        },
        "description": "Test validation - age less than 18"
      }
    },
    {
      "name": "Create User - Short Name",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{admin_token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Jo\",\n  \"email\": \"jo@example.com\",\n  \"age\": 25\n}"
        },
        "url": {
          "raw": "{{base_url}}/users",
          "host": ["{{base_url}}"],
          "path": ["users"]
        },
        "description": "Test validation - name too short"
      }
    },
    {
      "name": "Create User - No Token",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"No Auth User\",\n  \"email\": \"noauth@example.com\",\n  \"age\": 25\n}"
        },
        "url": {
          "raw": "{{base_url}}/users",
          "host": ["{{base_url}}"],
          "path": ["users"]
        },
        "description": "Test authentication - missing token"
      }
    },
    {
      "name": "Update User - Valid",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{admin_token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"John Updated\",\n  \"age\": 26\n}"
        },
        "url": {
          "raw": "{{base_url}}/users/2",
          "host": ["{{base_url}}"],
          "path": ["users", "2"]
        },
        "description": "Update user with valid data"
      }
    },
    {
      "name": "Update User - Not Found",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{admin_token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Updated Name\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/users/999",
          "host": ["{{base_url}}"],
          "path": ["users", "999"]
        },
        "description": "Update non-existent user"
      }
    },
    {
      "name": "Delete User - As Admin",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{admin_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/users/2",
          "host": ["{{base_url}}"],
          "path": ["users", "2"]
        },
        "description": "Delete user as admin (should succeed)"
      }
    },
    {
      "name": "Delete User - As Regular User",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{user_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/users/1",
          "host": ["{{base_url}}"],
          "path": ["users", "1"]
        },
        "description": "Delete user as non-admin (should fail with 403)"
      }
    },
    {
      "name": "Delete User - Not Found",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{admin_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/users/999",
          "host": ["{{base_url}}"],
          "path": ["users", "999"]
        },
        "description": "Delete non-existent user"
      }
    },
    {
      "name": "Simulate Error",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/error",
          "host": ["{{base_url}}"],
          "path": ["error"]
        },
        "description": "Trigger 500 internal server error"
      }
    },
    {
      "name": "Reset Data",
      "request": {
        "method": "POST",
        "header": [],
        "url": {
          "raw": "{{base_url}}/reset",
          "host": ["{{base_url}}"],
          "path": ["reset"]
        },
        "description": "Reset data store to initial state"
      }
    }
  ]
}
